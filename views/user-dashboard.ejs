<div class="dashboard-header" style="margin-bottom: var(--space-lg);">
    <h1>Welcome back, <%= user.full_name %>!</h1>
    <p style="color: var(--gray);">Here's an overview of your account activity.</p>
</div>

<!-- Stats Overview -->
<div class="dashboard-grid" style="grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));">
    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon success">
                <i class="fas fa-shopping-cart"></i>
            </div>
        </div>
        <div class="stat-number">
            <%= stats.totalOrders %>
        </div>
        <div class="stat-title">My Total Orders</div>
    </div>
    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon warning">
                <i class="fas fa-wallet"></i>
            </div>
        </div>
        <div class="stat-number">KSh <%= parseFloat(stats.totalSpent).toLocaleString() %>
        </div>
        <div class="stat-title">Total Amount Spent</div>
    </div>
</div>

<!-- Tables Section -->
<div class="dashboard-grid">
    <div class="data-table-container">
        <div class="table-header">
            <h3>My Recent Orders</h3>
            <a href="/orders" class="btn btn-secondary btn-sm">View All My Orders</a>
        </div>
        <table class="data-table">
            <thead>
                <tr>
                    <th>Order #</th>
                    <th>Date</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (recentOrders && recentOrders.length> 0) { %>
                    <% recentOrders.forEach(order=> { %>
                        <tr>
                            <td>#<%= order.order_number %>
                            </td>
                            <td>
                                <%= moment(order.created_at).format('MMM DD, YYYY') %>
                            </td>
                            <td>KSh <%= order.grand_total %>
                            </td>
                            <td>
                                <span class="badge badge-<%= 
                                    order.status === 'completed' ? 'success' : 
                                    order.status === 'pending' ? 'warning' : 
                                    order.status === 'cancelled' ? 'danger' : 'info' 
                                %>">
                                    <%= order.status %>
                                </span>
                            </td>
                            <td class="table-actions-cell">
                                <a href="/orders/<%= order.id %>" class="btn-icon view"><i class="fas fa-eye"></i></a>
                            </td>
                        </tr>
                        <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5"
                                        style="text-align: center; padding: var(--space-lg); color: var(--gray);">
                                        No orders found yet. <a href="/products" style="color: var(--primary);">Start
                                            shopping!</a>
                                    </td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </div>
</div>