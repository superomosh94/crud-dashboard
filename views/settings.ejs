<div class="form-container">
    <div class="form-header">
        <h2>System Settings</h2>
        <p>Administrator only. Manage global application configurations.</p>
    </div>

    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Some changes require an application restart.
    </div>

    <form>
        <div style="margin-bottom: var(--space-xl);">
            <h3
                style="margin-bottom: var(--space-md); border-bottom: 1px solid var(--gray-light); padding-bottom: 8px;">
                General Settings</h3>
            <div class="form-group">
                <label class="form-label">App Name</label>
                <input type="text" class="form-control" value="CRUD Dashboard">
            </div>
            <div class="form-group">
                <label class="form-label">Contact Email</label>
                <input type="email" class="form-control" value="admin@nairobitech.co.ke">
            </div>
            <div class="form-group">
                <label class="form-label">Currency Symbol</label>
                <input type="text" class="form-control" value="KSh">
            </div>
        </div>

        <div style="margin-bottom: var(--space-xl);">
            <h3
                style="margin-bottom: var(--space-md); border-bottom: 1px solid var(--gray-light); padding-bottom: 8px;">
                Theme & UI</h3>
            <div class="form-group">
                <label style="display: flex; align-items: center; gap: 10px;">
                    <input type="checkbox" checked> Enable Dark Mode Toggle
                </label>
            </div>
            <div class="form-group">
                <label style="display: flex; align-items: center; gap: 10px;">
                    <input type="checkbox" checked> Show Statistics on Dashboard
                </label>
            </div>
        </div>

        <div style="margin-bottom: var(--space-xl);">
            <h3
                style="margin-bottom: var(--space-md); border-bottom: 1px solid var(--gray-light); padding-bottom: 8px;">
                Maintenance</h3>
            <button type="button" class="btn btn-primary btn-sm" onclick="alert('Database backup started...')">
                <i class="fas fa-database"></i> Backup Database
            </button>
            <button type="button" class="btn btn-danger btn-sm" style="margin-left: 10px;">
                <i class="fas fa-trash-alt"></i> Clear Logs
            </button>
        </div>

        <div class="form-actions">
            <button type="button" class="btn btn-primary" onclick="alert('Settings saved!')">Save Settings</button>
            <a href="/dashboard" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>